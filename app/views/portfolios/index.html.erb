<h1>Portfolio Items</h1>
<%= link_to "Create a New Portfolio", new_portfolio_path %>
<% @portfolio_items.each do |portfolio_item| %>
    <p><%=  portfolio_item.title  %></p>
    <p><%=  portfolio_item.subtitle  %></p>
    <p><%=  portfolio_item.body  %></p>
    <%= image_tag  portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %></p> <br>
    <%=  link_to "Edit #{portfolio_item.title}", edit_portfolio_path(portfolio_item) %>
    <%=  link_to "Show More Details...", portfolio_path(portfolio_item) %>
    <%=  link_to "Delete Portfolio Item", portfolio_path(portfolio_item), method: :delete, data: {confirm: 'Are you sure'} %>
    <br><br>
<% end %>